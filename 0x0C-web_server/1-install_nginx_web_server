#!/usr/bin/env bash
# Install nginx on web server: listening on port 80

if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 
   exit 1
fi

# Update package list and install Nginx
apt update
apt install -y nginx

# Configure Nginx to listen on port 80 and return "Hello World!" at the root
cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location = / {
        echo "HTTP/1.1 200 OK";
        echo "Content-Type: text/html";
        echo "";
        echo "Hello World!";
    }
}
EOF

# Create the HTML directory and index.html file
mkdir -p /var/www/html
echo "Hello World!" > /var/www/html/index.html

# Check Nginx configuration syntax
nginx -t

# Restart Nginx service without using systemctl
kill -s HUP $(cat /var/run/nginx.pid)

echo "Nginx installed and configured. Server is ready."

